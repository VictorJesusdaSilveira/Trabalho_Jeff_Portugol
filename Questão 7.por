programa {
  funcao inicio() {

   inteiro crianca_idade , idade_soma

   escreva("Olá criança! Você está curioso para saber qual a soma de todas as suas idades juntas né. \n")
   escreva("Bom, para a sua felicidade, eu tenho todas as respostas. Qual a sua idade? ")
   leia(crianca_idade)

   idade_soma = crianca_idade*((crianca_idade + 1 )/2)

   escreva("As somas das suas idades é: ", idade_soma)

    
  }
}
